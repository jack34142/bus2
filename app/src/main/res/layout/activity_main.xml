<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0ffffff"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:hint="請輸入地址或站點名稱"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/searchAddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#00ffffff"
                android:paddingBottom="7dp"
                android:paddingLeft="8dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp"
                app:srcCompat="@drawable/ic_pin_drop_gray_24dp" />

            <ImageButton
                android:id="@+id/searchStop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#00ffffff"
                android:paddingBottom="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                app:srcCompat="@drawable/ic_forward_gray_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0ffffff"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <RadioGroup
                android:id="@+id/mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mode_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="選擇搭車站" />

                <RadioButton
                    android:id="@+id/mode_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="選擇目的地" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"

                    android:paddingTop="3dp"
                    android:text="搭車站：" />

                <ImageButton
                    android:id="@+id/start_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00ffffff"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_cancel_gray_20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:text="目的地：" />

                <ImageButton
                    android:id="@+id/end_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00ffffff"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_cancel_gray_20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/match"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:text="匹配公車：" />

                <Button
                    android:id="@+id/time"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:text="時刻表" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/show_button_shape"
            android:clickable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="#00ffffff"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />

            <ImageButton
                android:id="@+id/hide"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_arrow_drop_up_black_24dp" />

        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>